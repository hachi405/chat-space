.SideBar
  .LeftHeader
    .LeftHeader__List
      %h3.LeftHeader__UserName
        = current_user.name
      %ul.LeftHeader__IconList
        %li.LeftHeader__Icon
        = link_to new_group_url do
          = icon('fas', 'edit')
        %li.LeftHeader__Icon
        = link_to edit_user_path(current_user) do
          = icon('fas' , 'cog')

  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group.id) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
